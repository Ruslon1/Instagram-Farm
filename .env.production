# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Instagram Bot API"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=production

# Database (will be set by docker-compose)
# DATABASE_URL=postgresql://instagram_bot:password@postgres:5432/instagram_bot

# Redis (will be set by docker-compose)
# REDIS_URL=redis://redis:6379/0

# PostgreSQL Password (change this!)
POSTGRES_PASSWORD=your_super_secure_password_here

# External APIs - ЗАПОЛНИТЕ СВОИМИ ДАННЫМИ!
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
MS_TOKENS=your_ms_tokens_comma_separated

# Security (CHANGE THESE!)
SECRET_KEY=your-super-secret-key-for-production-min-32-chars
API_KEY=your_optional_api_key_for_authentication

# CORS - укажите ваш домен
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Paths (defaults are fine for Docker)
VIDEOS_DIR=./videos
SESSIONS_DIR=./sessions
LOGS_DIR=./logs

# Chrome Options for Docker
CHROME_OPTIONS=--headless,--no-sandbox,--disable-dev-shm-usage,--disable-gpu